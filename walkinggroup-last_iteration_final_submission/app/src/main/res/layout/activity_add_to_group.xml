<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.group.manager.activities.add.AddToGroupActivity">

    <include layout="@layout/custom_toolbar"
        android:id="@+id/add_to_group_custom_toolbar" />

    <ListView
        android:id="@+id/add_to_group_listView"
        android:layout_below="@+id/add_to_group_custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listView_height"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:baselineAligned="false"
        android:padding="@dimen/max_dimension_value" />

    <TextView
        android:id="@+id/add_to_group_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/bottom_textView_margin_bottom"
        android:text="@string/add_to_group_textView_content"
        android:textSize="18sp" />

</RelativeLayout>