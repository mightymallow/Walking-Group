<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.view.member.info.activity.ViewMemberInfoActivity">

    <include layout="@layout/custom_toolbar"
        android:id="@+id/member_info_custom_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/member_info_custom_toolbar"
        android:orientation="vertical"
        android:weightSum="100"
        android:gravity="center">

        <ListView
            android:id="@+id/view_user_info_listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:padding="@dimen/max_dimension_value" />

        <Space
            android:id="@+id/space_between_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>

        <TextView
        android:id="@+id/user_info_textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="@string/user_info_textView_content"
        android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>